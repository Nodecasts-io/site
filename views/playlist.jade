extends ./layout.jade

block content
  include ./includes/navbar.jade
  div.row
    div.col-md-8.col-md-offset-2.Video
      h1= message
      h3= description
      
      div#Player!= player

      ul.list-group.Playlist
        for video in videos
          li.list-group-item.Playlist-Video(data-id=video.id) #{video.title}
