extends ./layout.jade

block content
  include ./includes/navbar.jade
  div.row
    div.col-md-8.col-md-offset-2.Video
      h1= message
      h3= description
      
      div!= player

      div.list-group.Playlist
        for video in videos
          a.list-group-item(href="/video/" + video.id) #{video.title}
