extends ./layout.pug

block content
  div.container-fluid
    div.row.Header
      div.col-sm-6.col-sm-offset-3.Header-content
        h1 Learn Node.js
        p Learn node.js quickly with these free JavaScript courses. Our video tutorials cover Node.js, JavaScript and Web Performance!

        a.btn.btn-info(href="/videos")
          i.fa.fa-video-camera(aria-hidden="true")
          span  See all videos
        a.btn.btn-success.Course(href="/courses")
          i.fa.fa-th-list(aria-hidden="true")
          span  Start a course
    div.row
      div.col-lg-10.col-lg-offset-1.col-md-12.top-Margin
        div.fancy-subtitle
          span Check out our
        h1.fancy-title Featured Series
        div.row
          for entry in playlists
            div.col-md-3.col-xs-12
              div.thumbnail
                a(href="/playlist/" + entry.id)
                  img(src=entry.thumbnail)
                div.caption
                  a(href="/playlist/" + entry.id)
                    h4 #{entry.title}
                  p.description #{entry.description}
                  span.badge #{entry.count} videos

    div.row
      div.col-md-12.col-lg-10.col-lg-offset-1.top-Margin
        div.fancy-subtitle
          span Check out our
        h1.fancy-title Featured Videos
        div.row
          for video in videos
            div.col-md-2.col-sm-6.col-xs-15
              div.thumbnail
                a(href="/video/" + video.id)
                  img(src=video.thumbnail)
                div.caption
                  a(href="/video/" + video.id)
                    h5 #{video.title}

